{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "@safeql/eslint-plugin"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "@safeql/check-sql": [
      "error",
      {
        "connections": [
          {
            "databaseUrl": "postgres://postgres:postgres@localhost:5432/safeql_basic",
            "name": "client",
            "operators": ["query"]
          }
        ]
      }
    ]
  }
}
