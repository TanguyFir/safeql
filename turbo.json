{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "watch": {
        "dependsOn": ["tsc --watch"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["lib/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [""],
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    },
    "lint": {
      "outputs": []
    }
  }
}
